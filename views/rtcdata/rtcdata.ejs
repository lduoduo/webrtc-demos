<% include ../layout/header.html %>

<div class="rtc-main">

    <h2 class="rtc-title">dataChannel<br>点对点传输更快更安全<br></h2>
    <div class="rtc-btn-box ">
        <input class="input rtc-channelName J-channelName" type="text" placeholder="请输入数字房间号，相同房间可进行通信哦">
        <a class="btn btn-white J-start">立即体验</a>
        <a class="btn btn-white J-startMedia">开启音视频</a>
        <div class="share-url J-share-url"></div>
    </div>
    <div class="rtc-media ">
        <div class="rtc-video">
            <video class="video local J-local-video"></video>
            <video class="video remote J-remote-video"></video>
        </div>
        <div class="rtc-text">
            <div class="item">
                <textarea class="input rtc-data J-rtc-data" type="text" placeholder="输入任意内容"></textarea>
                <div>
                    <a class="btn btn-white J-send">发送</a>
                </div>
            </div>
            <div class="item">
                <a class="btn btn-white J-capture">开启远程视频截图[对端接收并显示]</a>
                
            </div>
            <div class="item">
                <a class="input rtc-file J-rtc-file">多文件传输，选择文件</a>
                <input type="file" multiple="multiple" class="hide" id="fileInput">
            </div>
            
        </div>
        <canvas class="J-canvas" width=0 height=0></canvas>
    </div>
    
</div>
